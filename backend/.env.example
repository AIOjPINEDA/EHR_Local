# ============================================
# ConsultaMed Backend - Environment Variables
# ============================================
# Copia este archivo a .env y configura los valores

# Database mode selector (local_pg17 | supabase_cloud)
DATABASE_MODE=local_pg17
# Database (local PostgreSQL 17 - default deployment mode)
LOCAL_DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/consultamed
# Database (Supabase cloud fallback)
SUPABASE_DATABASE_URL=postgresql+asyncpg://postgres:[PASSWORD]@db.[PROJECT].supabase.co:5432/postgres
# Effective URL consumed by backend runtime.
# Keep this explicit for reproducible deployments:
# - local_pg17 -> LOCAL_DATABASE_URL
# - supabase_cloud -> SUPABASE_DATABASE_URL
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/consultamed

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# CORS
FRONTEND_URL=http://localhost:3000

# Environment
ENVIRONMENT=development
DEBUG=true

# Supabase (for auth integration if needed)
SUPABASE_URL=https://[PROJECT].supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key
